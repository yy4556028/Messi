<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/activity_audio_notification_normal_imageView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_audio_notification_normal_titleText"
            style="@style/TextBlack_Big"
            android:ellipsize="end"
            android:lines="1"
            tools:text="Title" />

        <TextView
            android:id="@+id/activity_audio_notification_normal_subtitleText"
            style="@style/TextLight_Small"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:lines="1"
            tools:text="Subtitle" />

    </LinearLayout>

    <ImageView
        android:id="@+id/activity_audio_notification_normal_playImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="8dp"
        android:src="@drawable/activity_audio_play_play_normal"
        app:tint="@color/theme" />

    <ImageView
        android:id="@+id/activity_audio_notification_normal_nextImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="8dp"
        android:src="@drawable/activity_audio_play_next_normal"
        app:tint="@color/theme" />

    <ImageView
        android:id="@+id/activity_audio_notification_normal_removeImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="8dp"
        android:src="@drawable/erase"
        app:tint="@color/theme" />
</LinearLayout>