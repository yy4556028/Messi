<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <com.yuyang.messi.view.Progress.CircleProgressBar
        android:id="@+id/progress_without_text"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:visibility="gone"
        app:mlpb_arrow_height="5dp"
        app:mlpb_arrow_width="10dp"
        app:mlpb_enable_circle_background="true"
        app:mlpb_progress_color="@color/transparent"
        app:mlpb_progress_stoke_width="5dp"
        app:mlpb_progress_text_color="@color/colorAccent"
        app:mlpb_progress_text_size="@dimen/text_size_tiny"
        app:mlpb_progress_text_visibility="invisible"
        app:mlpb_show_arrow="true" />

    <com.yuyang.messi.view.Progress.CircleProgressBar
        android:id="@+id/progress_with_text"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:visibility="gone"
        app:mlpb_arrow_height="5dp"
        app:mlpb_arrow_width="10dp"
        app:mlpb_enable_circle_background="true"
        app:mlpb_progress_color="@color/transparent"
        app:mlpb_progress_stoke_width="5dp"
        app:mlpb_progress_text_color="@color/colorAccent"
        app:mlpb_progress_text_size="@dimen/text_size_tiny"
        app:mlpb_progress_text_visibility="visible"
        app:mlpb_show_arrow="true" />

</RelativeLayout>