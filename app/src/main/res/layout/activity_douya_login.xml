<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_header_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/activity_douya_login_phoneEdit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:hint="手机"
                android:padding="4dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/textHint"
                android:textCursorDrawable="@drawable/edit_text_cursor_theme"
                android:textSize="@dimen/text_size_normal" />

            <EditText
                android:id="@+id/activity_douya_login_pwdEdit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:hint="密码"
                android:inputType="textPassword"
                android:padding="4dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/textHint"
                android:textCursorDrawable="@drawable/edit_text_cursor_theme"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rectangle_stroke_theme_5"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="4dp"
                    android:textColor="@color/colorPrimary"
                    android:textCursorDrawable="@drawable/edit_text_cursor_theme"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/rectangle_stroke_theme_5_selector"
                    android:gravity="center"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="获取验证码"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <TextView
                android:id="@+id/activity_douya_login_login"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rectangle_theme_5_selector"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>