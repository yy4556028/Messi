<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycler_bg"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/activity_swipe_menu_list_view_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_swipe_menu_list_view_name"
                style="@style/TextBlack_Middle"
                android:layout_weight="1"
                tools:text="应用名" />

            <TextView
                android:id="@+id/activity_swipe_menu_list_view_version"
                style="@style/TextDark_Small"
                tools:text="1.0.0" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_swipe_menu_list_view_packageName"
            style="@style/TextDark_Small"
            android:layout_marginTop="4dp"
            tools:text="包名：" />

        <TextView
            android:id="@+id/activity_swipe_menu_list_view_textView1"
            style="@style/TextDark_Small"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/activity_swipe_menu_list_view_textView2"
            style="@style/TextDark_Small"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/activity_swipe_menu_list_view_textView3"
            style="@style/TextDark_Small"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/activity_swipe_menu_list_view_textView4"
            style="@style/TextDark_Small"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</LinearLayout>