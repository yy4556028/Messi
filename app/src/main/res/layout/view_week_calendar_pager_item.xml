<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal">

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="12dp"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/view_week_calendar_pager_item_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_week_calendar_pager_item_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/view_week_calendar_pager_item_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:lines="1"
            android:textSize="@dimen/text_size_subtitle" />

        <ImageView
            android:id="@+id/view_week_calendar_pager_item_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/week_calendar_flag"
            android:visibility="invisible" />
    </LinearLayout>
</RelativeLayout>