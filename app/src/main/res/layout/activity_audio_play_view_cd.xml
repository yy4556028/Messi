<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_audio_play_view_cd_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_normal" />

    <com.yuyang.messi.view.Audio.AudioCDView
        android:id="@+id/activity_audio_play_view_cd_cdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp" />

    <com.yuyang.messi.view.Audio.AudioLrcView
        android:id="@+id/activity_audio_play_view_cd_lrcView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:currentTextColor="@color/white"
        app:dividerHeight="0dp"
        app:normalTextColor="@color/white"
        app:rows="1"
        app:lrcTextSize="@dimen/text_size_normal" />

</LinearLayout>