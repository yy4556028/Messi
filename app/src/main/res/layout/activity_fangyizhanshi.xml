<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:padding="8dp"
            android:src="@drawable/vectoranimate_arrow_left"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            app:srcCompat="@drawable/vectoranimate_close"
            app:tint="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="防疫战狮"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:padding="4dp"
            app:srcCompat="@drawable/fangyizhanshi_icon0" />

    </LinearLayout>

    <com.yuyang.lib_base.ui.view.RoundRectConstraintLayout
        android:id="@+id/roundRectLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivReveal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/oval_theme"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_white_5"
            android:padding="10dp"
            android:src="@drawable/fangyizhanshi_icon1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="于洋(19041162)"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:translationY="-4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivAvatar"
            app:layout_constraintTop_toTopOf="@+id/ivAvatar" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="物流集团物流研发中心数智研发中心基础技术产研中心安卓开发部"
            android:textColor="@color/white"
            android:textSize="14.5sp"
            app:layout_constraintEnd_toEndOf="@+id/tvName"
            app:layout_constraintStart_toStartOf="@+id/tvName"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <ImageView
            android:id="@+id/bgFugong"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:src="@drawable/rectangle_white_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivAvatar"
            app:tint="#F7F7F7" />

        <View
            android:id="@+id/iconFugong"
            android:layout_width="36dp"
            android:layout_height="30dp"
            android:background="@drawable/fangyizhanshi_icon2"
            android:translationY="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/bgFugong"
            app:layout_constraintStart_toStartOf="@+id/bgFugong"
            app:layout_constraintTop_toTopOf="@+id/bgFugong" />

        <TextView
            android:id="@+id/tvFugong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复工状态"
            android:textColor="@color/base_text_b2"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/bgFugong"
            app:layout_constraintStart_toEndOf="@+id/iconFugong"
            app:layout_constraintTop_toTopOf="@+id/bgFugong" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="公司现场办公"
            android:textColor="@color/base_text_b1"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/bgFugong"
            app:layout_constraintStart_toEndOf="@+id/tvFugong"
            app:layout_constraintTop_toTopOf="@+id/bgFugong" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="更多"
            android:textColor="@color/base_blue_light"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/bgFugong"
            app:layout_constraintEnd_toEndOf="@+id/bgFugong"
            app:layout_constraintTop_toTopOf="@+id/bgFugong" />

        <ImageView
            android:id="@+id/bgJiucan"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/rectangle_white_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bgFugong"
            app:tint="#F7F7F7" />

        <View
            android:id="@+id/iconJiucan"
            android:layout_width="36dp"
            android:layout_height="30dp"
            android:background="@drawable/fangyizhanshi_icon3"
            android:translationY="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/bgJiucan"
            app:layout_constraintStart_toStartOf="@+id/bgJiucan"
            app:layout_constraintTop_toTopOf="@+id/bgJiucan" />

        <TextView
            android:id="@+id/tvJiucan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="就餐信息"
            android:textColor="@color/base_text_b2"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/bgJiucan"
            app:layout_constraintStart_toEndOf="@+id/iconJiucan"
            app:layout_constraintTop_toTopOf="@+id/bgJiucan" />

        <androidx.legacy.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            app:layout_constraintTop_toBottomOf="@+id/bgJiucan" />

    </com.yuyang.lib_base.ui.view.RoundRectConstraintLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:src="@drawable/fangyizhanshi_icon4" />

</LinearLayout>