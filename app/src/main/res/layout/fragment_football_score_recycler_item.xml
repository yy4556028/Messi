<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/fragment_football_score_recycler_item_rank"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="排名"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_size_normal" />

    <ImageView
        android:id="@+id/fragment_football_score_recycler_item_teamIcon"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/fragment_football_score_recycler_item_teamName"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:text="球队"
        android:gravity="center_vertical|left"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/fragment_football_score_recycler_item_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="场次"
        android:gravity="center"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/fragment_football_score_recycler_item_win"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="胜"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/fragment_football_score_recycler_item_tie"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="平"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/fragment_football_score_recycler_item_lose"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="负"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/fragment_football_score_recycler_item_goalDiff"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="净胜球"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/fragment_football_score_recycler_item_score"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="积分"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_size_normal" />
</LinearLayout>