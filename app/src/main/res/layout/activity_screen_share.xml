<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_header_layout" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/activity_screen_share_cbHD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高清视频" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/activity_screen_share_cbAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录制声音" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/activity_screen_share_btnRecord"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="开始录屏"
        app:cornerRadius="22.5dp"
        app:icon="@null"
        app:iconGravity="start"
        app:iconPadding="0dp"
        app:iconSize="0dp"
        app:strokeColor="@color/theme"
        app:strokeWidth="0dp" />
</LinearLayout>
