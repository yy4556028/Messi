<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_header_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle_stroke_theme_5"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_auto_click_etClickX"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="startX"
            android:inputType="numberDecimal"
            android:padding="4dp"
            android:textColor="@color/colorPrimary"
            android:textCursorDrawable="@drawable/edit_text_cursor_theme"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle_stroke_theme_5"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_auto_click_etClickY"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="startY"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:padding="4dp"
            android:textColor="@color/colorPrimary"
            android:textCursorDrawable="@drawable/edit_text_cursor_theme"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/activity_auto_click_tvStart"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle_theme_5_selector"
        android:gravity="center"
        android:text="开始点击"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal" />

</LinearLayout>