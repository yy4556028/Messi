<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_header_layout" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/activity_workmanager_createOneTimeWork"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="创建单次任务"
        app:cornerRadius="22.5dp"
        app:icon="@null"
        app:iconGravity="start"
        app:iconPadding="0dp"
        app:iconSize="0dp"
        app:strokeColor="@color/theme"
        app:strokeWidth="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/activity_workmanager_getOneTimeWorkState"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="获取单次任务状态"
        app:cornerRadius="22.5dp"
        app:icon="@null"
        app:iconGravity="start"
        app:iconPadding="0dp"
        app:iconSize="0dp"
        app:strokeColor="@color/theme"
        app:strokeWidth="0dp" />
</LinearLayout>