<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@android:integer/config_shortAnimTime" android:exitFadeDuration="@android:integer/config_shortAnimTime">
    <item android:state_enabled="true" android:state_pressed="true">
        <ripple android:color="@color/theme_alpha">
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <stroke android:width="1dp" android:color="@color/theme" />
                    <gradient android:endColor="@color/theme_alpha" android:startColor="@color/transparent" />
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/theme" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/theme_alpha" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>