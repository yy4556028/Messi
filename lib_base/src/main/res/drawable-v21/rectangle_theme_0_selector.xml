<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@android:integer/config_shortAnimTime" android:exitFadeDuration="@android:integer/config_shortAnimTime">
    <item android:state_enabled="true">
        <ripple android:color="@color/theme_ripple">
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="0dp" />
                    <gradient android:endColor="@color/theme_dark" android:startColor="@color/theme_light" />
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/theme_alpha" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</selector>