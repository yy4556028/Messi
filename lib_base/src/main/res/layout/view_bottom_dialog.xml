<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <ListView
        android:id="@+id/view_bottom_dialog_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rectangle_white_15"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/base_line"
        android:dividerHeight="1dp"
        android:listSelector="@android:color/transparent"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:scrollbars="none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle_white_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_bottom_dialog_cancelText"
            style="@style/TextLight_Big"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:text="取消"
            android:textColor="@color/theme"
            android:textSize="18sp" />

        <View
            android:id="@+id/view_bottom_dialog_centerLine"
            android:layout_width="1px"
            android:layout_height="24dp"
            android:background="@color/base_line"
            android:visibility="gone" />

        <TextView
            android:id="@+id/view_bottom_dialog_confirmText"
            style="@style/TextLight_Big"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:text="确定"
            android:textColor="@color/theme"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>